{
  "manifest_version": 3,
  "name": "Substack Paywall Warning",
  "version": "1.0",
  "description": "Shows a warning banner when a Substack article has a paywall",
  "content_scripts": [
    {
      "matches": [
        "*://*.substack.com/*",
        "*://*/*"
      ],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://*.substack.com/*",
    "*://*/*"
  ]
}
